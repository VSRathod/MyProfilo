<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>JSON to Image Viewer</title>

  <!-- Bootstrap 5 CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<body class="bg-light">

  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="text-center flex-grow-1">Upload JSON to View Images</h2>
      <!-- Dark mode toggle -->
      <div class="form-check form-switch ms-3">
        <input class="form-check-input" type="checkbox" id="darkModeToggle">
        <label class="form-check-label" for="darkModeToggle">Dark Mode</label>
      </div>
    </div>

    <!-- File upload -->
    <div class="row justify-content-center mb-4">
      <div class="col-md-8 col-lg-6">
        <div class="input-group">
          <input type="file" id="jsonFile" class="form-control" accept=".json">
          <button id="loadBtn" class="btn btn-primary">Show Images</button>
        </div>
        <div class="form-text mt-2">
          Upload a JSON file with PNG or JPG images.
        </div>
      </div>
    </div>

    <!-- Images grid -->
    <div id="images-container" class="row g-4"></div>
  </div>

  <!-- Image Preview Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content bg-dark text-white">
        <div class="modal-body p-0 text-center">
          <img id="modalImage" class="img-fluid" src="" alt="Preview" />
        </div>
        <div class="modal-footer bg-dark border-0 justify-content-center">
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const fileInput = document.getElementById('jsonFile');
    const button = document.getElementById('loadBtn');
    const container = document.getElementById('images-container');
    const modal = new bootstrap.Modal(document.getElementById('imageModal'));
    const modalImage = document.getElementById('modalImage');
    const darkModeToggle = document.getElementById('darkModeToggle');

    // Dark mode toggle
    darkModeToggle.addEventListener('change', () => {
      document.body.classList.toggle('bg-dark');
      document.body.classList.toggle('text-white');
    });

    // Show images from JSON
    button.addEventListener('click', () => {
      container.innerHTML = '';

      const file = fileInput.files[0];
      if (!file) {
        alert("Please select a JSON file.");
        return;
      }

      const reader = new FileReader();
      reader.onload = (e) => {
        try {
          const text = e.target.result;

          // Remove wrapping variable assignment, if any
          const jsonText = text
            .replace(/^[^{]*?=\s*/, '') // strip var assignment
            .replace(/;?\s*$/, '');    // strip semicolon

          const imageData = JSON.parse(jsonText);

          for (const fileName in imageData) {
            const base64 = imageData[fileName];
            if (!base64 || base64 === '___') continue;

            const ext = fileName.toLowerCase().endsWith('.jpg') ? 'jpeg' : 'png';
            const mimeType = `image/${ext}`;

            // Create column and card
            const col = document.createElement('div');
            col.className = 'col-sm-6 col-md-4 col-lg-3';

            const card = document.createElement('div');
            card.className = 'card h-100 shadow-sm';

            const img = document.createElement('img');
            img.src = `data:${mimeType};base64,${base64}`;
            img.alt = fileName;
            img.className = 'card-img-top img-thumbnail';
            img.style.cursor = 'pointer';

            // Modal preview on click
            img.addEventListener('click', () => {
              modalImage.src = img.src;
              modal.show();
            });

            const cardBody = document.createElement('div');
            cardBody.className = 'card-body text-center';

            const caption = document.createElement('p');
            caption.className = 'card-text small text-truncate';
            caption.textContent = fileName;

            const downloadBtn = document.createElement('a');
            downloadBtn.href = img.src;
            downloadBtn.download = fileName;
            downloadBtn.className = 'btn btn-sm btn-outline-primary mt-2';
            downloadBtn.textContent = 'Download';

            cardBody.appendChild(caption);
            cardBody.appendChild(downloadBtn);
            card.appendChild(img);
            card.appendChild(cardBody);
            col.appendChild(card);
            container.appendChild(col);
          }

        } catch (err) {
          alert("Invalid JSON content.");
          console.error(err);
        }
      };

      reader.readAsText(file);
    });
  </script>

</body>
</html>
